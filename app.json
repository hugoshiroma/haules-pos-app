{
  "expo": {
    "name": "haules-pos-app",
    "slug": "haules-pos-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "haulesposapp",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/images/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.hshiroma1.haulesposapp",
      "infoPlist": {
        "NSCameraUsageDescription": "O Haules PoS precisa de acesso à sua câmera para escanear QR Codes de clientes.",
        "NSMicrophoneUsageDescription": "O Haules PoS precisa de acesso ao seu microfone para gravar áudio com a câmera (opcional).",
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO",
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO"
      ],
      "package": "com.hshiroma1.haulesposapp"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "62a6c734-5afa-4527-9dab-ec07be250715"
      }
    },
    "owner": "hshiroma1"
  }
}
